<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_margin="8dp"
                                    app:cardBackgroundColor="#d6cdcd"
                                    android:layout_height="260dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/itemPosterImageView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:id="@+id/itemTitleTextView"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:textSize="12sp"
                tools:text="Tokyo Ghoul"
                android:padding="8dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="#cc000000"
                android:maxLines="2"


                app:layout_constraintEnd_toEndOf="@+id/itemPosterImageView"
                app:layout_constraintStart_toStartOf="@+id/itemPosterImageView"
                app:layout_constraintBottom_toBottomOf="@+id/itemPosterImageView"/>

        <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                   android:scaleType="centerCrop"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>