<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.sz94n.ineedspleep">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".activites.activities.MainActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:parentActivityName=".activites.activities.MainActivity"
                android:name=".activites.activities.AnimeInfoActivity"
                android:label="@string/title_activity_anime_info"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:parentActivityName=".activites.activities.MainActivity"
                android:name=".activites.activities.MangaInfoActivity"
                android:label="@string/title_activity_manga_info"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:parentActivityName=".activites.activities.MainActivity"
                android:name=".activites.activities.CharacterInfoActivity"
                android:label="@string/title_activity_charcater_info"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>